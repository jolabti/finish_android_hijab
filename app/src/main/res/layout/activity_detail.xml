<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myhijab.myhijab.DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">
        <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="360dp"
                    android:layout_height="360dp"
                    android:id="@+id/img"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img"
                    android:layout_marginTop="20dp">
                    <TableRow
                        android:baselineAligned="true"
                        android:layout_width="match_parent">

                        <TextView
                            android:text="Kode Hijab :"
                            android:textSize="7pt"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_height="wrap_content"
                            android:id="@+id/kdHijab"
                            android:textSize="7pt"
                            android:layout_width="200dp"
                            android:maxWidth="140sp"
                            android:inputType="text">

                        </TextView>
                    </TableRow>

                    <TableRow
                        android:baselineAligned="true"
                        android:layout_width="match_parent">

                        <TextView
                            android:text="Nama Hijab :"
                            android:textSize="7pt"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_height="wrap_content"
                            android:id="@+id/namaHijab"
                            android:textSize="7pt"
                            android:layout_width="200dp"
                            android:maxWidth="140sp"
                            android:inputType="text">

                        </TextView>
                    </TableRow>
                    <TableRow
                        android:baselineAligned="true"
                        android:layout_width="match_parent">

                        <TextView
                            android:text="Bahan :"
                            android:textSize="7pt"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_height="wrap_content"
                            android:id="@+id/bahanHijab"
                            android:textSize="7pt"
                            android:layout_width="200dp"
                            android:maxWidth="140sp"
                            android:inputType="text">

                        </TextView>
                    </TableRow>

                    <TableRow
                        android:baselineAligned="true"
                        android:layout_width="match_parent">

                        <TextView
                            android:text="Jenis:"
                            android:textSize="7pt"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_height="wrap_content"
                            android:id="@+id/jenisHijab"
                            android:textSize="7pt"
                            android:layout_width="200dp"
                            android:maxWidth="140sp"
                            android:inputType="text">

                        </TextView>
                    </TableRow>
                    <TableRow
                        android:baselineAligned="true"
                        android:layout_width="match_parent">

                        <TextView
                            android:text="Stok :"
                            android:textSize="7pt"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_height="wrap_content"
                            android:id="@+id/stokHijab"
                            android:textSize="7pt"
                            android:layout_width="200dp"
                            android:maxWidth="140sp"
                            android:inputType="text">

                        </TextView>
                    </TableRow>

                    <TableRow
                        android:baselineAligned="true"
                        android:layout_width="match_parent">

                        <TextView
                            android:text="Harga :"
                            android:textSize="7pt"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_height="wrap_content"
                            android:id="@+id/hargaHijab"
                            android:textSize="7pt"
                            android:layout_width="200dp"
                            android:maxWidth="140sp"
                            android:inputType="text">

                        </TextView>
                    </TableRow>
                </TableLayout>

            </RelativeLayout>
            <TextView
                android:text="Silakan Masukkan Data Pemesanan"
                android:textSize="8pt"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"/>
            <TableRow
                android:baselineAligned="true"
                android:layout_width="match_parent">

                <TextView
                    android:text="Nama Lengkap :"
                    android:textSize="7pt"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"/>

                <EditText
                    android:layout_height="wrap_content"
                    android:id="@+id/namaLkp"
                    android:textSize="7pt"
                    android:layout_width="200dp"
                    android:maxWidth="140sp"
                    android:inputType="text">

                </EditText>
            </TableRow>

            <TableRow
                android:baselineAligned="true"
                android:layout_width="match_parent">

                <TextView
                    android:text="Email :"
                    android:textSize="7pt"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"/>

                <EditText
                    android:layout_height="wrap_content"
                    android:id="@+id/et_nama"
                    android:textSize="7pt"
                    android:layout_width="200dp"
                    android:maxWidth="140sp"
                    android:inputType="text">

                </EditText>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Alamat :"
                    android:textSize="7pt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"/>

                <EditText android:layout_height="wrap_content"
                    android:id="@+id/et_alamat"
                    android:textSize="7pt"
                    android:layout_width="200dp"
                    android:maxWidth="140sp"
                    android:inputType="text">
                </EditText>

            </TableRow>

            <TableRow>
                <TextView
                    android:text="Nomor Tlp :"
                    android:textSize="7pt"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"/>

                <EditText android:layout_height="wrap_content"
                    android:id="@+id/et_notel"
                    android:textSize="7pt"
                    android:layout_width="200dp"
                    android:maxWidth="140sp"
                    android:inputType="text">
                </EditText>

            </TableRow>

            <TableRow>
                <TextView
                    android:text="Jumlah :"
                    android:textSize="7pt"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"/>


                <EditText android:id="@+id/et_jumlah"
                    android:maxWidth="140sp"
                    android:textSize="7pt"
                    android:layout_height="wrap_content"
                    android:layout_width="200dp"
                    android:inputType="number">
                </EditText>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Total :"
                    android:textSize="7pt"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold" />

                <EditText android:id="@+id/et_total"
                    android:layout_height="wrap_content"
                    android:layout_width="200dp"
                    android:textSize="7pt"
                    android:layout_gravity="center_vertical"
                    android:inputType="number">
                </EditText>
            </TableRow>

            <TableRow>

                <RadioGroup
                    android:id="@+id/bayar"></RadioGroup>
            </TableRow>

            <TableRow>
                <Button
                    android:text="BELI"
                    android:id="@+id/btn_simpan"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gb_selector_1"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="7pt">
                </Button>

            </TableRow>

            <TextView
                android:text=""
                android:id="@+id/error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold" />

        </TableLayout>
    </ScrollView>

</RelativeLayout>
