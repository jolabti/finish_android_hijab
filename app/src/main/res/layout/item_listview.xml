<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="240dp"
        android:fitsSystemWindows="true"
        android:scaleType="centerInside" />


    <TextView
        android:id="@+id/nama_hijab"
        android:layout_alignTop="@+id/image"
        android:layout_toRightOf="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dip"
        android:textStyle="bold"
        android:textSize="20sp"
      />

    <TextView
        android:id="@+id/harga_hijab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama_hijab"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/image"
        android:textStyle="bold"
        android:textSize="14sp"/>


    <TextView
        android:id="@+id/stok_hijab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/harga_hijab"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/image"
        android:textStyle="bold"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/klikfordetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stok_hijab"
        android:layout_marginTop="55dip"
        android:layout_toRightOf="@+id/image"
        android:text="Klik untuk info mengenai produk"
        android:textSize="10sp"/>
</RelativeLayout>